<h2 class="text-center">Restaurant member login</h2>

<div class="ms-3 d-flex justify-content-center">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                placeholder: "Email address",
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", style: "max-width: 350px;" } %>
    <%= f.input :password,
                placeholder: "Password",
                required: false,
                input_html: { autocomplete: "current-password", style: "max-width: 350px;" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions mb-2">
    <%= f.button :submit, "Sign in", class:"btn btn-primary", style: "width: 200px;" %>
  </div>
  <div>
    <%= link_to "Registration page", auth_path, class:"btn btn-primary", style: "width: 200px;" %>
  </div>
<% end %>
</div>
