<h1 class="show-restaurant-title text-center">Welcome to <%= @restaurant.name %>'s Page</h1>

<ul>
    <li>Restaurant name : <%= @restaurant.name %> </li>
    <li>Cuisine : <%= @restaurant.cuisine %> </li>
    <li>Phone no : <%= @restaurant.phone_no %> </li>
    <li>Rating : <%= @restaurant.rating %> </li>
  <br>
</ul>

<h2> review </h2>
<%= link_to 'create_a_review', new_restaurant_review_path(@restaurant) %>

<ul>
  <% @restaurant.reviews.each do |review| %>
    <li><%= review.content %></li>
  <% end %>
</ul>
