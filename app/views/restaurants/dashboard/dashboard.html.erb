<div class="nav-top">
<%# go-back-icon %>
<div class="back">
  <%= link_to 'javascript:history.back()' do %>
    <i class="fa-solid fa-angle-left"></i>
  <% end %>
</div>
<%# <h1 class="top-text">WHY WHY WASTE</h1> %>
<h1 class="text-center">Restaurant dashboard</h1>
</div>
<ul class="nav-menu">
  <li><h2 class="text-center">Published menu items</h2></li>
<%# Loop through all published %>
  <ul>
    <% @published_foods.each do |food| %>
    <div class="food-card-restaurant">
          <div class="card-product-infos-restaurants">
          <%# check-box %>
          <div>
            <small>best seller</small>
              <form action="<%= food_path(food) %>" data-controller="bestseller">
                <input name="food[bestseller]" <%= checked="checked" if food.bestseller? %> data-action="input->bestseller#toggle" data-bestseller-target="input" type="checkbox" >
                <div data-bestseller-target="hideme" id="stuff_to_hide">
                </div>
              </form>
          </div>
          <%= link_to unpublished_restaurant_food_path(food.restaurant, food), data: { turbo_method: :patch } do %>
          <h4 id="btn-put-back">Put it back</h4>
          <% end %>

            <% if food.photo.attached? %>
              <%= cl_image_tag food.photo.key, height: 80, width: 80, crop: :fill, class: "dashboard-img"%>
            <% else %>
              <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
            <% end %>
            <div class="text-infos">
              <li id="food-name"><%= food.name %> </li>
              <li id="food-price">  <%= number_to_currency(food.price) %> </li>
              <li id="food-description"><%= food.description %> </li>
              <li id="food-quantity">Qty: <%= food.quantity %> </li>
              <br>
              </div>
            </div>
          </div>
        </div>
    <% end %>
  </ul>
<br>
<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :pickup_start,
            as: :string,
            input_html: { data: { controller: "datepicker", datepicker_time_value: true } } %>
  <%= f.input :pickup_end,
            as: :string,
            input_html: { data: { controller: "datepicker", datepicker_time_value: true } } %>
  <%= f.submit :publish, class: "publish-btn" %>
<% end %>

<%# publish button %>
<div class="btn">
<%= link_to 'Go to Home', restaurants_path, class: 'btn-positive mt-3',  data: {turbo_method: :post, turbo_confirm: "Are you sure you want to leave this page without publishing?" } %>
</div>


</ul>
