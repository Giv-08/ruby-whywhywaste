<h1 class="text-center">Restaurant dashboard</h1>

<ul class="nav-menu">
  <li><h2>Published menu</h2></li>
<%# Loop through all published %>
  <ul>
    <% @published_foods.each do |food| %>
      <li><%= food.name %></li>
      <li><%= food.price %></li>
    <% end %>
  </ul>

<li><h2>Your menu (unpublished)</h2></li>
<% @unpublished_foods.each do |food| %>
        <div class="food-card">
      <%# add icon %>
      <%= link_to foods_path do %>
          <%= image_tag "https://www.svgrepo.com/show/2087/plus.svg", width: 20%>
            <% end %>
          <div class="card-product-infos">
            <% if food.photo.attached? %>
              <%= cl_image_tag food.photo.key, height: 180, width: 150, crop: :fill %>
            <% else %>
              <img style="width: 150px" src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
            <% end %>
            <div class="text-infos">
              <li id="food-name"><%= food.name %> </li>
              <li id="food-price">$<%= food.price %> </li>
              <li id="food-description"><%= food.description %> </li>
              <%# edit icon %>
              <%= link_to edit_food_path(food) do %>
                <%= image_tag "https://w7.pngwing.com/pngs/944/137/png-transparent-pen-computer-icons-pen-angle-pencil-black-thumbnail.png", width: 20%>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

</ul>
<div class="d-flex justify-content-center flex-column">
<%= link_to "Help Centre", "#", class: "btn btn-primary" %>
<%= link_to "Notification", restaurant_notification_path(@restaurant), class: "btn btn-primary" %>
</div>
<%= link_to "Log out", destroy_restaurant_session_path, data: {turbo_method: :delete}, class: "btn btn-primary" %>
