
<%= render "shared/top_nav" %>

<%= image_tag "www-logo.png", alt: "Logo", class: "logo-img" %>
<%#= button_tag "Search", type: :button, onclick: "window.location.href = '#'", class: "button-negative" %>
</div>

<div class="container body">
  <h1 class= "text-center mt-5"><%= current_user.first_name %>'s Dashboard</h1>

  <div class="container dashboard-menu">
    <ul>
      <div class="card shop-card mb-2">
        <li>
           <%= link_to restaurants_path do %>
             <i class="fa-solid fa-bag-shopping"></i>
             Start shopping
            <% end %>
        </li>
      </div>

      <div class="card previous-card mb-5">
        <li>
          <%= link_to past_orders_path do %>
            <i class="fa-solid fa-clipboard-check"></i>
            Previous orders
          <% end %>
        </li>
      </div>

      <div class="card settings-card mb-2">
        <li>
          <%= link_to "#" do %>
            <i class="fa-solid fa-gear"></i>
            Settings
          <% end %>
        </li>
      </div>

      <div class="card help-card mb-2">
        <li>
          <%= link_to "#" do %>
            <i class="fa-solid fa-circle-question"></i>
            Customer Care
          <% end %>
        </li>
      </div>

      <div class="card logout-card mb-2">
        <li>
          <%= link_to destroy_restaurant_session_path, data: {turbo_method: :delete} do %>
            <i class="fa-solid fa-right-from-bracket"></i>
            Log out
          <% end %>
        </li>
      </div>
    </ul>
  </div>

</div>
